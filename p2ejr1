//Calcular e imprimir la suma de los números impares hasta ingresar 0

int numero;
int suma = 0;

Console.WriteLine("ingresar números ó ingresar 0 para finalizar:");

while (true)
{
    numero = Convert.ToInt32(Console.ReadLine());
    if (numero == 0)
        break;
    if (numero % 2 != 0)
        suma += numero;
}

Console.WriteLine("La suma de los números impares es: " + suma);
